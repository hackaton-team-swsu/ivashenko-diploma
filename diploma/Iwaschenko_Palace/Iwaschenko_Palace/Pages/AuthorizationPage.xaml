<Page x:Class="Iwaschenko_Palace.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Iwaschenko_Palace.Pages"
      xmlns:props="clr-namespace:Iwaschenko_Palace.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
               <TextBlock Text="Логин:" Style="{StaticResource CommonBlock}"></TextBlock>
                <TextBox x:Name="TBoxLogin"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль:" Style="{StaticResource CommonBlock}"></TextBlock>
                <PasswordBox x:Name="PBoxPassword"></PasswordBox>
            </StackPanel>
            <Button HorizontalAlignment="Right" Content="Войти"
                    Name="BtnLogin" Click="BtnLogin_Click" ></Button>
         </StackPanel>
    </Grid>
</Page>
