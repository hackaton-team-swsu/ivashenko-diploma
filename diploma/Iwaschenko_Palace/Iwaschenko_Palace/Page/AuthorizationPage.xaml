<Page x:Class="Iwaschenko_Palace.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Iwaschenko_Palace.Pages"
      xmlns:props="clr-namespace:Iwaschenko_Palace.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <!--<TextBlock Style="{StaticResource MyBlock}" Text="Логин"></TextBlock>-->
                <TextBox x:Name="TBoxLogin"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <!--<TextBlock Style="{StaticResource MyBlock}" Text="Пароль"></TextBlock>-->
                <PasswordBox x:Name="PBoxPassw" MaxLength="9"></PasswordBox>
            </StackPanel>
            <Button HorizontalAlignment="Stretch" Width="auto" Height="27" Margin="5"
                Content="Войти" Name="BtnLogin" Click="BtnLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
