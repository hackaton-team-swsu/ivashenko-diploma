<Page x:Class="Iwaschenko_Palace.Pages.EventPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Iwaschenko_Palace.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EventPages">

    <Grid>
        <DataGrid Margin="5" Name="DGEvent" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id_Book}" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Book_Name}" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Author}" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Publication_Date}" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Price}" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Id_Book_Genre}" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Publishing}" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Page_Count}" Width="auto"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
