<Page x:Class="Iwaschenko_Palace.Pages.AdminPages.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Iwaschenko_Palace.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню администратора">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="357*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добро пожаловать!" HorizontalAlignment="Center" Width="auto" VerticalAlignment="Center" FontSize="20"></TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <Button Name="Btn1" Style="{StaticResource MyBtn}" Content="Сотрудники" Click="Btn1_Click"></Button>
            <Button Name="Btn2" Style="{StaticResource MyBtnBack}" Content="Волонтёры" Click="Btn2_Click"></Button>
            <Button Name="Btn3" Style="{StaticResource MyBtnBack}" Content="Пользователи" Click="Btn3_Click"></Button>
            <Button Name="Btn4" Style="{StaticResource MyBtnBack}" Content="Роли" Click="Btn4_Click"></Button>
            <Button Name="Btn5" Style="{StaticResource MyBtnBack}" Content="Фото" Click="Btn5_Click"></Button>
            <Button Name="Btn6" Style="{StaticResource MyBtnBack}" Content="Участие" Click="Btn6_Click"></Button>
            <Button Name="Btn7" Style="{StaticResource MyBtnBack}" Content="Движение" Click="Btn7_Click"></Button>
            <Button Name="Btn8" Style="{StaticResource MyBtnBack}" Content="Мероприятия" Click="Btn8_Click"></Button>
            <Button Name="Btn9" Style="{StaticResource MyBtnBack}" Content="Отдел" Click="Btn9_Click"></Button>
            <Button Name="Btn10" Style="{StaticResource MyBtnBack}" Content="Авторизация" Click="Btn10_Click"></Button>
            <Button Name="Btn11" Style="{StaticResource MyBtnBack}" Content="Должность" Click="Btn11_Click"></Button>
       </StackPanel>
    </Grid>
</Page>
